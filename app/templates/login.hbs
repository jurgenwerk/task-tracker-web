<div class="form-wrapper">
  <form {{action 'login' username password on="submit"}} class="fv-form-centered">
    <h1> Task Tracker </h1>
    <h2> Login </h2>

    <div class="form-fields">
      {{input value=username placeholder="E-mail"}}
      {{input value=password placeholder="Password" type="password"}}
    </div>

    <div class="form-actions">
      <p> {{errorMessage}} </p>

      <button {{action 'login' username password}} disabled={{isLoggingIn}} class="btn-primary btn-form-action">
        {{#if isLoggingIn}}
          Logging in ...
        {{else}}
          Login
        {{/if}}
      </button>
    </div>

    {{#link-to 'signup' class="tt-link offset-top inline-block"}}
      Don't have an account?
    {{/link-to}}
  </form>
</div>
